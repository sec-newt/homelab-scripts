# System
PUID=1000
PGID=1000
TZ=America/Chicago
USERDIR=/home/youruser
DOCKERDIR=/path/to/docker          # root directory for all container config/data
SECRETDIR=/path/to/docker/secrets  # docker secrets files

# Networking
DOMAINNAME=yourdomain.com
NCDOMAINNAME=nextcloud.yourdomain.com
LOCAL_NETWORK=192.168.1.0/24
LOCAL_IPS=127.0.0.1/32,192.168.1.0/24
CLOUDFLARE_IPS=                    # Cloudflare IP ranges if using CF proxy

# Cloudflare (for DNS challenge SSL)
CLOUDFLARE_API_KEY=

# Database
MYSQL_ROOT_PASSWORD=

# Nextcloud
# Space-separated list of trusted domains
NEXTCLOUD_TRUSTED_DOMAINS=nextcloud.your-tailnet.ts.net nextcloud nextcloud.local
REDIS_HOST=redis

# Tailscale
# Create a reusable auth key at tailscale.com/settings/keys
TS_AUTHKEY=

# Vaultwarden
SIGNUPS_ALLOWED=false
INVITATIONS_ALLOWED=true
SHOW_PASSWORD_HINT=false
WEBSOCKET_ENABLED=true
ADMIN_TOKEN=                        # generate with: openssl rand -base64 48
VWDOMAIN=vaultwarden.yourdomain.com
LOG_LEVEL=warn

# SMTP (used by Vaultwarden for email)
SMTP_HOST=smtp.example.com
SMTP_FROM=you@example.com
SMTP_PORT=587
SMTP_SECURITY=starttls
SMTP_USERNAME=you@example.com
SMTP_PASSWORD=

# Calibre
CALIBREPASS=

# Wazuh SIEM
# Change ALL of these from defaults before exposing ports externally
WAZUH_INDEXER_PASSWORD=            # default was: SecretPassword — CHANGE THIS
WAZUH_API_PASSWORD=                # default was: MyS3cr3tP@ssw0rd! — CHANGE THIS
WAZUH_DASHBOARD_USERNAME=kibanaserver
WAZUH_DASHBOARD_PASSWORD=          # default was: kibanaserver — CHANGE THIS
